{
  "manifest_version": 3,
  "name": "FrevoCRM Developer Tool",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ]
    }
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  },
  "web_accessible_resources": [{
    "resources": ["js/inject.js"],
    "matches": ["<all_urls>"]
  }],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost/*"
  ]
}